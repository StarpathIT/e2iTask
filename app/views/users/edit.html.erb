<h1>Editing user</h1>
<div class="container">
  <div class="span6 offset6">
    <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Save Changes", class: "btn btn-lg btn-success" %> |
        <%= link_to 'Show', @user, class: "btn btn-lg btn-primary" %> |
        <%= link_to 'Back', users_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>