<% if @taskfield.errors.any? %>
    <div id="errorExplanation">
      <!--Count returns no.of errors; Pluralize avoid gramatical "1 errors" mistakes-->
      <div class="alert alert-error">
        The form contains <%= pluralize(@taskfield.errors.count, "error") %>.
      </div>
      <ul>
        <% @taskfield.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>